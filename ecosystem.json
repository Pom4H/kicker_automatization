{
  "apps": [
    {
      "name": "app",
      "script": "dist/app.js",
      "env": {
        "NODE_ENV": "dev",
        "KICKER_ENV": "dev"
      },
      "env_prod": {
        "NODE_ENV": "prod",
        "KICKER_ENV": "prod"
      }
    }
  ],
  "deploy": {
    "prod": {
      "key": "~/.ssh/id_rsa",
      "user": "pi",
      "host": ["192.168.9.112"],
      "ssh_options": "StrictHostKeyChecking=no",
      "ref": "origin/master",
      "repo": "git@github.com:observation-point/kicker_automatization.git",
      "path": "/home/pi/projects/kicker_automatization",
      "pre-setup": "echo 'PRE SETUP'",
      "post-setup": "echo 'POST SETUP'",
      "pre-deploy-local": "echo 'This is a local executed command'",
      "post-deploy": "yarn && yarn compile && pm2 start ecosystem.json --env prod"
    }
  }
}
