{
  "apps": [
    {
      "name": "kicker",
      "script": "dist/app.js",
      "env": {
        "NODE_ENV": "dev",
        "KICKER_ENV": "dev"
      },
      "env_prod": {
        "NODE_ENV": "prod",
        "KICKER_ENV": "prod"
      },
      "watch": true
    }
  ],
  "deploy": {
    "prod": {
      "key": "~/.ssh/id_rsa",
      "user": "pi",
      "host": ["192.168.9.76"],
      "ssh_options": "StrictHostKeyChecking=no",
      "ref": "origin/master",
      "repo": "git@github.com:observation-point/kicker_automatization.git",
      "path": "/home/pi/projects/kicker_automatization",
      "pre-setup": "echo 'PRE SETUP'",
      "post-setup": "echo 'POST SETUP'",
      "pre-deploy-local": "yarn compile && rm dist.tar.gz && tar czfP dist.tar.gz dist && scp dist.tar.gz pi@observer.lan:~/projects/kicker_automatization/current",
      "post-deploy": "rm -rf ./dist && tar -xzvf dist.tar.gz && yarn install && pm2 start ecosystem.json --env prod && rm dist.tar.gz"
    }
  }
}
